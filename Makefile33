CC = gcc
CFLAG = -Wall -Wextra -Werror
NAME = a.out

SRCS = main.c
OBJS = $(SRCS:.c=.o)

MLXDIR = ./mlx
MLXFLAG = -L$(MLXDIR) -lmlx -framework OpenGL -framework AppKit

.PHONY: all
all: $(NAME)

$(NAME): $(OBJS)
	@make -s -C $(MLXDIR)
	$(CC) $(CFLAG) $(OBJS) $(MLXFLAG) -o $(NAME)
	@install_name_tool -change libmlx.dylib $(MLXDIR)/libmlx.dylib $(NAME)

.PHONY: clean
clean:
	@make clean -s -C $(MLXDIR)
	rm -f $(OBJS)

.PHONY: fclean
fclean: clean
	rm -f $(NAME)

.PHONY: re
re: fclean all
